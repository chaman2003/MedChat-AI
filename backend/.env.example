# Med-Chat Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# NEO4J CONFIGURATION (Graph Database)
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ===========================================
# SUPABASE CONFIGURATION (Vector Database)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Direct PostgreSQL connection (for pgvector)
# Get from: Supabase Dashboard > Settings > Database > Connection string > URI
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ===========================================
# HUGGINGFACE CONFIGURATION (Free Embeddings)
# ===========================================
# Get free API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_api_key_here

# ===========================================
# GROQ CONFIGURATION (LLM)
# ===========================================
LLM_PROVIDER=groq
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=openai/gpt-oss-120b
GROQ_TEMPERATURE=0
GROQ_MAX_TOKENS=1024

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
